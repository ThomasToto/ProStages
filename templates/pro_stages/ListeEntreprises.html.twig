{% extends 'base.html.twig' %}

{% block contenu %}
<br />
{% if is_granted('ROLE_ADMIN') %}
<center><button class="btn btn-primary"><a href="/creer-entreprise"><font color="white" >Créer une entreprise </font></a></button></center>
{% endif %}
<div class="row" style="margin-top:15px:">
<table class="table">
            <thead>
             <tr>
                <th scope="col"></th>
                <th scope="col">Nom</th>
                <th scope="col">Activité</th>
                <th scope="col">Adresse</th>
                <th scope="col">SiteWeb</th>
                <th scope="col">Liens</th>

             </tr>
            </thead>
      {% for entrepriseCourante in entreprises %}
            <tbody>
             <tr>
                <th scope="row"></th>
                <td>{{entrepriseCourante.nom}}</td>
                <td>{{entrepriseCourante.activite}}</td>
                <td>{{entrepriseCourante.adresse}}</td>
                <td>{{entrepriseCourante.siteWeb}}</td>
                <td><a href="{{path('ProStages_Stages_Par_Nom_Entreprise',{'nomEntreprise':entrepriseCourante.nom})}}" class="btn btn-primary">Voir les stages de l'entreprise</a>
                     {% if is_granted('ROLE_ADMIN') %}
                    <a href="/modifier-entreprise/{{entrepriseCourante.id}}" class="btn btn-primary">Modifier l'entreprise</a>
                    {% endif %}
                </td>

             </tr>
            </tbody>  
      {% endfor %}
</table>
</div>


                

{% endblock %}
