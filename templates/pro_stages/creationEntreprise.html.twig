{% extends 'base.html.twig' %}

{% block contenu %}
{{ form_start(form)}}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h3><center>
				Créer entreprise
			</center></h3>
		</div>
	</div>
    
	<div class="row">
        <div class="col-md-4">
	    </div>
		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<form role="form">

                        <div class="form-group">
                                        {{ form_label(form.nom,"Nom de l'entreprise") }}
                                        {{ form_errors(form.nom) }}
                                        {{ form_widget(form.nom) }}
                        </div>

                        <div class="form-group">
                                {{ form_label(form.activite,"Domaine d'activité") }}
                                {{ form_errors(form.activite) }}
                                {{ form_widget(form.activite) }}
                        </div>

                        <div class="form-group">
                                {{ form_label(form.adresse,'Adresse') }}
                                {{ form_errors(form.adresse) }}
                                {{ form_widget(form.adresse) }}
                        </div>

                        <div class="form-group">
                                {{ form_label(form.siteweb,'Site Web') }}
                                {{ form_errors(form.siteweb) }}
                                {{ form_widget(form.siteweb) }}
                        </div>

    
                        <center><button class="btn btn-primary" type="submit" >Valider</button></center>
			        </form>
				</div>
			</div>
		</div>

        <div class="col-md-4">
		</div>

	</div>
        
</div>
{{ form_end(form)}}

{% endblock %}

                


